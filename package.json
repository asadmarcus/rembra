{
  "name": "rembra-electron",
  "version": "1.0.2",
  "description": "Rembra AI Meeting Assistant for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "dist:all": "electron-builder --win --mac --linux --publish=never",
    "release": "electron-builder --publish=always",
    "release:mac": "electron-builder --mac --publish=always",
    "release:win": "electron-builder --win --publish=always",
    "draft": "electron-builder --publish=onTagOrDraft",
    "build-native": "cd native && node-gyp rebuild",
    "postinstall": "npm run build-native || echo 'Native module build failed - will use fallback'",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "ai",
    "meeting",
    "assistant",
    "transcription"
  ],
  "author": "Rembra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/asadmarcus/rembra.git"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "dotenv": "^17.2.2",
    "electron-audio-loopback": "^1.0.6",
    "electron-store": "^8.1.0",
    "firebase": "^10.5.0",
    "nan": "^2.17.0",
    "node-fetch": "^3.3.2",
    "robotjs": "^0.6.0",
    "tesseract.js": "^5.0.4",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "electron-updater": "^6.6.2",
    "node-gyp": "^9.0.0"
  },
  "build": {
    "appId": "com.rembra.desktop",
    "productName": "Rembra",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "asadmarcus",
        "repo": "rembra"
      }
    ],
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/electron"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
